<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dat055.group5.client.controller.ChatController">
   <children>
      <SplitPane dividerPositions="0.2, 0.8" HBox.hgrow="ALWAYS" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="600.0" prefWidth="900.0">
         <items>

            <VBox prefWidth="180.0">
               <children>
                  <Label text="Channels" textAlignment="CENTER" VBox.vgrow="NEVER">
                     <font>
                        <Font name="JetBrains Mono Bold" size="14.0" />
                     </font>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </Label>
                  <ListView fx:id="channelList" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>

            <VBox prefWidth="500.0">
               <children>
                  <Pane prefHeight="40.0" style="-fx-background-color: #f0f0f0;" VBox.vgrow="NEVER" />

                  <ListView fx:id="chatList" VBox.vgrow="ALWAYS" />

                  <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="NEVER">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <TextArea minHeight="-Infinity" prefHeight="45.0" promptText="Type a message..." HBox.hgrow="ALWAYS">
                           <font>
                              <Font name="JetBrains Mono Regular" size="12.0" />
                           </font>
                        </TextArea>
                        <Button mnemonicParsing="false" onAction="#onSend" prefHeight="45.0" prefWidth="80.0" text="SEND">
                           <font>
                              <Font name="JetBrains Mono Regular" size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>

            <VBox prefWidth="180.0">
               <children>
                  <Label text="Users" VBox.vgrow="NEVER">
                     <font>
                        <Font name="JetBrains Mono Bold" size="14.0" />
                     </font>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </Label>
                  <ListView fx:id="userList" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>

         </items>
      </SplitPane>
   </children>
</HBox>