<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" spacing="15.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dat055.group5.client.controller.LoginController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
    <children>
        <Label text="Chat Application">
            <font>
                <Font name="JetBrains Mono Bold" size="24.0" />
            </font>
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
        </Label>

        <TextField fx:id="usernameField" maxWidth="250.0" prefHeight="35.0" promptText="Username">
            <font>
                <Font name="JetBrains Mono Regular" size="14.0" />
            </font>
        </TextField>

        <PasswordField fx:id="passwordField" maxWidth="250.0" prefHeight="35.0" promptText="Password">
            <font>
                <Font name="JetBrains Mono Regular" size="14.0" />
            </font>
        </PasswordField>

        <Button maxWidth="250.0" mnemonicParsing="false" onAction="#onLogin" prefHeight="35.0" text="LOGIN">
            <font>
                <Font name="JetBrains Mono Bold" size="14.0" />
            </font>
        </Button>

        <Label fx:id="errorLabel" textFill="RED">
            <font>
                <Font name="JetBrains Mono Regular" size="12.0" />
            </font>
        </Label>
    </children>
</VBox>